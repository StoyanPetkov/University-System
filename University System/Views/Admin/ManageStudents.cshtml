@model University_System.ViewModels.AdminViewModel.AdminControllerStudentVM

@{
    ViewBag.Title = "ManageStudents";
}

<h2>ManageStudents</h2>

<p>
    <b>@Html.ActionLink("Add new student", "EditStudents", "Admin", new { @id = 0 }, null)</b>
</p>

<table class="table">
    <tr>
        <td>
            <b>
                First name
            </b>
        </td>
        <td>
            <b>
                Last name
            </b>
        </td>
        <td>
            <b>
                User name
            </b>
        </td>
        <td>
            <b>
                Faculity number
            </b>
        </td>
        <td>
            <b>
                Course
            </b>
        </td>
        <td>
            <b>
                Is Active
            </b>
        </td>
    </tr>
    @foreach (var item in Model.studentList)
    {
        <tr>
            <td>
                @item.FirstName
            </td>
            <td>
                @item.LastName
            </td>
            <td>
                @item.UserName
            </td>
            <td>
                @item.FacultyNumber
            </td>
            <td>
                @item.Course.Name
            </td>
            <td>
                @item.IsActive
            </td>
            <td>
                @Html.ActionLink("Delete", "DeleteStudent", "Admin", new { @id = item.Id }, null) |
                @Html.ActionLink("Edit", "EditStudents", "Admin", new { @id = item.Id }, null)
            </td>
        </tr>
    }
</table>
<table class="table">
    <tr>
        <td>
            @Html.ActionLink("Back", "Home", "Admin")
        </td>
    </tr>
</table>